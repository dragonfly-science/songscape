#!/bin/sh
# postrm script for django-site-paua-logger
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # We don't restart apache, it's more risk than necessary. But we will
        # alert the user if they should
        if (ps ax | grep apache > /dev/null 2>&1); then
            echo
            echo " * Apache is running: make sure you restart apache, so the site is taken offline properly *"
            echo
        fi
    ;;

    purge)
        rm -rf /var/log/sitelogs/songscape
        if [ -d /var/lib/sitedata/songscape ]; then
            echo
            echo "NOTE: purge does _not_ remove:"
            echo " * /var/lib/sitedata/songscape; or"
            echo " * the database"
            echo "You must do this yourself if you really want to!"
            echo
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
